// #################################################### \\
// ~~~~~~~~~~~~~~~ SLURM CONFIGURATION ~~~~~~~~~~~~~~~~ \\

executor {
    name = 'slurm'
    queueSize = "${params.queue_size}"
    queueStatInterval = '3 min'
    exitReadTimeout = '60 min'
    submitRateLimit = '1sec'
}

