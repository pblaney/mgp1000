            }
            withName: binReadCoverageInNormal_fragcounter {
                container = "containers/fragcounter-0.0.0.9000.simg"
                cpus = 1
                memory = 24.GB
                time = 13.h
            }
            withName: binReadCoverageInTumor_fragcounter {
                container = "containers/fragcounter-0.0.0.9000.simg"
                cpus = 1
                memory = 24.GB
                time = 13.h
            }
            withName: snpPileup_fragcounter {
