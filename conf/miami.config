// #################################################### \\
// ~~~~~~~~~~~~~~~~ LSF CONFIGURATION ~~~~~~~~~~~~~~~~~ \\

executor {
    name = 'lsf'
    perTaskReserve = false
    perJobMemLimit = true
    queueSize = "${params.queue_size}"
    queueStatInterval = '3 min'
    exitReadTimeout = '60 min'
    submitRateLimit = '10 sec'
}

// Profiles for individual modules of the MGP1000: Preprocessing, Germline, and Somatic
