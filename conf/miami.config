            withName: mergeLaneSplitFastqs_mergelane {
                queue = 'sccc3'
                container = "containers/base-2.0.simg"
                cpus = 1
                memory = 2.GB
                time = 3.h
            }
            withName: gatherInputFastqs_fastqgatherer {
                queue = 'sccc3'
                container = "containers/base-2.0.simg"
